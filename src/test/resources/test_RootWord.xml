<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context" xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="     http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd   http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">


    <!-- This is crucial to getting the annotations to work. -->
    <context:annotation-config/>
    <context:component-scan
            base-package="com.idehgostar.makhsan.domain.base,com.idehgosmakhzan.hbs.Entity.RootInfo.RootWord"/>


    <bean id="querySourcesUtil" class="unittest.MockitoFactoryBean">
        <constructor-arg>
            <value type="java.lang.Class">core.base.QuerySourcesUtil</value>
        </constructor-arg>
    </bean>




    <bean id="rootWordManager" class="unittest.MockitoFactoryBean">
        <constructor-arg>
            <value type="java.lang.Class">backup.RootInfo.RootWord.RootWordManagerImpl</value>
        </constructor-arg>
    </bean>

    <bean id="rootWordTri" class="unittest.MockitoFactoryBean">
        <constructor-arg>
            <value type="java.lang.Class">com.idehgostar.makhsan.core.tri.TriElement</value>
        </constructor-arg>
    </bean>




    <bean class="core.properties.PropertyGroupProviderFactory" id="propertyGroupProviderFactory"/>
    <bean id="propertyGroupProvider" factory-bean="propertyGroupProviderFactory" factory-method="build">
        <constructor-arg index="0">
            <value type="java.lang.Class">
                core.properties.RegexPropertyGroupProvider
            </value>
        </constructor-arg>
        <constructor-arg index="1">
            <list>
                <value>mo</value>
                <value>core</value>
            </list>
        </constructor-arg>
    </bean>


</beans>